{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build clox",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "main",
                "main.c",
                "chunk.c",
                "memory.c",
                "debug.c",
                "value.c",
                "vm.c",
                "compiler.c",
                "scanner.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/lox"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiles the clox interpreter with debug symbols"
        }
    ]
}
